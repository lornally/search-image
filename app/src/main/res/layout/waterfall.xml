<?xml version="1.0" encoding="utf-8"?>
<com.takungae.dagong30.mckScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlwaterfall"
        android:orientation="vertical"
        >
        <Button
            android:layout_width="180dp"

            android:layout_height="180dp"
            android:id="@+id/button_searchresult1"
            android:layout_alignParentStart="true"
            android:background="@drawable/empty_photo"


             />
        <Button
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:id="@+id/button_favor"
            android:layout_alignParentTop="true"
            android:background="@drawable/empty_photo"
            android:layout_toRightOf="@id/button_searchresult1"


             />

        <Button
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:id="@+id/button_byphoto"
            android:layout_below="@id/button_searchresult"
            android:background="@drawable/empty_photo"
            android:text="1"
            />
        <Button
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:id="@+id/button_bycamera"
            android:layout_below="@id/button_favor"
            android:layout_toRightOf="@id/button_searchresult"

            android:background="@drawable/empty_photo"
            android:text="2" />
        <Button
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/button_happyregister"
            android:layout_below="@id/button_byphoto"
            android:background="@drawable/empty_photo"

            android:text="3" />
        <Button
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:id="@+id/button7"
            android:layout_below="@id/button_bycamera"

            android:layout_toRightOf="@id/button_searchresult"

            android:background="@drawable/empty_photo"

            android:text="4"
            />
        <Button
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/button8"
            android:layout_below="@id/button_happyregister"
            android:background="@drawable/empty_photo"

            android:text="5"

            />
        <Button
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:id="@+id/button9"
            android:layout_below="@id/button7"

            android:layout_toRightOf="@id/button_searchresult"

            android:background="@drawable/empty_photo"

            android:text="6"

            />
        <Button
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/button10"
            android:layout_below="@id/button8"
            android:background="@drawable/empty_photo"

            android:text="7"

            />
        <Button
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:id="@+id/button11"
            android:layout_below="@id/button9"
            android:layout_toRightOf="@id/button_searchresult"


            android:background="@drawable/empty_photo"

            android:text="8"

            />

        <Button
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/button12"
            android:layout_below="@id/button10"
            android:background="@drawable/empty_photo"

            android:text="9"

            />
        <Button
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:id="@+id/button13"
            android:layout_below="@id/button11"
            android:layout_toRightOf="@id/button_searchresult"


            android:background="@drawable/empty_photo"

            android:text="10"

            />
        <Button
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/button14"
            android:layout_below="@id/button12"
            android:background="@drawable/empty_photo"

            android:text=""

            />
        <Button
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:id="@+id/button15"
            android:layout_below="@id/button13"
            android:layout_toRightOf="@id/button_searchresult"

            android:background="@drawable/empty_photo"

            android:text=""

            />
    </RelativeLayout>
</com.takungae.dagong30.mckScrollView>