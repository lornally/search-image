<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.takungae.dagong30.MainActivity"
    android:background="#fafafa">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首页"
        android:id="@+id/button_home"
        android:width="120dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:textColor="#971818"
        android:textSize="14sp"
        android:height="65dp"
        android:drawableTop="@drawable/house"
        android:paddingTop="8dp"
        android:onClick="onbuttonbackhome"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相册"
        android:id="@+id/button_searchresult"
        android:layout_alignBottom="@+id/button_home"
        android:layout_toEndOf="@+id/button_home"
        android:width="120dp"
        android:background="#ffffff"
        android:textColor="#999"
        android:textSize="14sp"
        android:height="65dp"
        android:drawableTop="@drawable/camera"
        android:paddingTop="8dp"
        android:onClick="onbuttongallery"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收藏"
        android:id="@+id/button_favor"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button_searchresult"
        android:background="#ffffff"
        android:textColor="#999"
        android:width="120dp"
        android:textSize="14sp"
        android:height="65dp"
        android:drawableTop="@drawable/heart"
        android:paddingTop="8dp"
        android:onClick="onbuttonbookmark"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="照片搜索艺术品"
        android:id="@+id/button_byphoto"
        android:layout_marginTop="58dp"
        android:background="#f2f2f2"
        android:textColor="#000"
        android:width="320dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:height="120dp"
        android:drawableTop="@drawable/gallery_circle"
        android:paddingTop="26dp"
        android:onClick="onbuttonphotosearch"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拍照搜索艺术品"
        android:id="@+id/button_bycamera"
        android:background="#fff"
        android:textColor="#000"
        android:width="320dp"
        android:layout_below="@+id/button_byphoto"
        android:layout_centerHorizontal="true"
        android:height="120dp"
        android:layout_marginTop="14dp"
        android:textSize="14sp"
        android:drawableTop="@drawable/camera_circle"
        android:paddingTop="26dp"
        android:onClick="onbuttoncamerasearch"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击有惊喜"
        android:id="@+id/button_happyregister"
        android:layout_below="@+id/button_bycamera"
        android:background="#fff"
        android:textColor="#C4A054"
        android:width="320dp"
        android:layout_centerHorizontal="true"
        android:height="65dp"
        android:layout_marginTop="14dp"
        android:textSize="14sp"
        android:onClick="onbuttonhappy"
        />
</RelativeLayout>
